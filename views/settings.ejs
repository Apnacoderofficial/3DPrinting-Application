<%- include('includes/head') %>

	<div class="wrapper">
		<%- include('includes/sidebar') %>

		<div class="main">
			<%- include('includes/header') %>

			<main class="content">
				<div class="container-fluid p-0">

					<h1 class="h3 mb-3">Profile Settings</h1>

					<div class="row">
						<div class="col-12">
							<div class="card">
								<div class="card-header">
									<form action="/settings" method="POST">
										<div class="mb-3">
										  <label for="name" class="form-label">Name</label>
										  <input type="text" class="form-control" id="name" name="name" value="<%= (user.name) ? user.name : '' %>" placeholder="Enter name" required>
										</div>
										
										<div class="mb-3">
										  <label for="email" class="form-label">Email</label>
										  <input type="email" class="form-control" id="email" name="email" value="<%= (user.email) ? user.email : '' %>" placeholder="Enter email" required readonly>
										</div>
										
										<div class="mb-3">
										  <label for="role" class="form-label">Role</label>
										  <input type="text" class="form-control" id="role" name="role" value="<%= (user.role) ? user.role : '' %>" placeholder="Enter role" required>
										</div>
										
										<div class="mb-3">
										  <label for="version" class="form-label">Version</label>
										  <input type="text" class="form-control" id="version" name="version" value="<%= (user.version) ? user.version : '' %>" placeholder="Enter version" required>
										</div>
										
										<button type="submit" class="btn btn-primary">Update Profile</button>
									  </form>
									  
                                      
								</div>
								<div class="card-body">
								</div>
							</div>
						</div>
					</div>

				</div>
			</main>
			<%- include('includes/footer') %>